<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tupian_01"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bwie.d.quarterhour.view.activity.LoginInActivity"
    >


    <TextView
        android:id="@+id/login_text"
        android:padding="16dp"
        android:textSize="20dp"
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/zhucezhanghao"
        android:textSize="20dp"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号？"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/loginin_touxiang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/touxiang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/Login_user"
        android:layout_below="@+id/loginin_touxiang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入账号"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/Login_pass"
        android:layout_below="@+id/Login_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:background="#E3EBF2"
        android:id="@+id/login_deng"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="注册"/>
    <TextView
        android:textColor="#ffffff"
        android:paddingTop="30dp"
        android:textSize="20dp"
        android:layout_below="@+id/login_deng"
        android:id="@+id/youke"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="游客登录"
        />

</RelativeLayout>
