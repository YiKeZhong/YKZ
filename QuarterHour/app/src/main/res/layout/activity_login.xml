<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.d.quarterhour.view.activity.LoginActivity"
    android:background="@drawable/login_bg"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/login_touxiang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/touxiang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/login_weix"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_touxiang"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="微信登录"
        android:background="@drawable/edit_bg"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/login_qqin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_weix"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="QQ登录"
        android:background="@drawable/edit_bg"
        android:gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/Login_qita"
        android:layout_below="@+id/login_qqin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他方式登录"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"/>

</RelativeLayout>